{
  "schemaVersion": 1,
  "id": "${archivesBaseName}",
  "version": "${version}",
  "environment": "*",
  "entrypoints": {
    "main": [ "dev.lazurite.lattice.core.impl.common.LatticeCoreCommon" ],
    "client": [ "dev.lazurite.lattice.core.impl.client.LatticeCoreClient" ]
  },
  "mixins": [
    {
      "config": "lattice-core.common.mixins.json",
      "environment": "*"
    },
    {
      "config": "lattice-core.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "minecraft": "${min_minecraft_version}",
    "fabricloader": "${min_loader_version}"
  },
  "name": "${lattice_name}",
  "description": "${description}",
  "authors": [ "The Lazurite Team" ],
  "contact": {
    "homepage": "https://lazurite.dev",
    "issues": "https://github.com/LazuriteMC/Lattice/issues",
    "sources": "https://github.com/LazuriteMC/Lattice"
  },
  "license": "MIT",
  "icon": "assets/${archivesBaseName}/icon.png",
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/NNPPHN7b3P"
      },
      "badges": [ "library" ],
      "parent": "${rootProject_name}"
    }
  }
}
